/* components/tabs/tabs.wxss */
.tabs-title{
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #fff;
}
.tabs-title .tabs-item{
    padding: 25rpx 0;
    flex: 1;
    text-align: center;
    border-bottom: 5rpx solid #eee;
    color: #333;
}
.tabs-title .active{
    color: var(--ThemeColor);
    border-bottom-color: currentColor;
}