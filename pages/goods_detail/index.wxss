/* pages/goods_detail/index.wxss */
.detail-container{
    padding-bottom: 90rpx;
}
.detail-swiper{
    height: 65vw;
}
.detail-swiper swiper-item{
    display: flex;
    justify-content: center;
    align-items: center;
}
.detail-swiper image{
    width: 60%;
}
.goods_price{
    color: var(--ThemeColor);
    padding: 20rpx 10rpx;
    font-weight: bold;
}
.goods_jc{
    display: flex;
    padding: 10px 0px;
    border-top: 5rpx solid #dedede;
    border-bottom: 5rpx solid #dedede;
}
.goods_jc .goods_name{
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    flex: 8;
}
.goods_jc .goods_collect{
    flex: 2;
    border-left: 5rpx solid gray;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
}
.detail{
    color: var(--ThemeColor);
    font-size: 30rpx;
    padding: 30rpx 10rpx;
    font-weight: bold;
    border-bottom: 5rpx solid #dedede;
}
.goods_detail_tabs{
    position: fixed;
    left: 0;
    bottom: 0;
    display: flex;
    width: 100%;
    height: 90rpx;
    background-color: #fff;
}
.goods_detail_tabs .detail-item{
    flex: 1;
    font-size: 24rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative;
}
.goods_detail_tabs .detail-item button{
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    opacity: 0;
}
.goods_detail_tabs .addCart,.goods_detail_tabs .buy{
    flex: 2;
    font-size: 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
}
.goods_detail_tabs .addCart{
    background-color: rgb(250,166,8);
}
.goods_detail_tabs .buy{
    background-color: rgb(248,82,66);
}
.icon-shoucang{
    color: var(--ThemeColor);
}